{% sw_extends '@Storefront/storefront/block/cms-block-image-text-cover.html.twig' %}
{% block block_image_text_cover %}
	{% set columns = 2 %}
	{% set id = element.id %}

	{% block block_image_text_cover_left %}
		{% set element = block.slots.getSlot('left') %}

		<div class="col-md-6 col-lg-7" data-cms-element-id="{{ id }}">
			{% block block_image_text_cover_left_inner %}
				{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
			{% endblock %}
		</div>
	{% endblock %}

	{% block block_image_text_cover_right %}
		{% set element = block.slots.getSlot('right') %}

		<div class="col-md-6 col-lg-5" data-cms-element-id="{{ id }}">
			{% block block_image_text_cover_right_inner %}
				{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
			{% endblock %}
		</div>
	{% endblock %}
{% endblock %}
