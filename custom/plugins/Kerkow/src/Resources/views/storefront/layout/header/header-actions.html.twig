{% block header_navigation_header_actions %}

	<div class="d-none d-md-block">
		{% block header_navigation_account_widget %}
			{% sw_include '@kerkow/storefront/layout/header/actions/account-widget.html.twig' %}
		{% endblock %}
	</div>
	<div class="d-none d-md-block">
		{% block header_navigation_zip_placeholder %}
			{% sw_include '@KerkowZipShop/storefront/layout/header/actions/zip-widget.html.twig' %}
		{% endblock %}
	</div>
	{% block header_navigation_cart_widget %}
		{% block layout_header_actions_cart %}
			<li class="nav-item nav-item-cart">
				<div class="header-cart" data-offcanvas-cart="true">
					<a class="btn header-cart-btn header-actions-btn" href="{{ path('frontend.checkout.cart.page') }}" data-cart-widget="true" title="{{ 'checkout.cartTitle'|trans|striptags }}" aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">
						{% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}
					</a>
				</div>
			</li>
		{% endblock %}
	{% endblock %}

{% endblock %}
