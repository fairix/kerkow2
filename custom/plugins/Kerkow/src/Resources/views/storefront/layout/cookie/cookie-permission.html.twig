{% sw_extends '@Storefront/storefront/layout/cookie/cookie-permission.html.twig' %}

{% block layout_cookie_permission_inner %}
	<div class="cookie-permission-container" data-cookie-permission="true">
		<div class="container">
			<div class="row align-items-center">

				{% block layout_cookie_permission_inner_content %}
					<div class="col-12 cookie-permission-content">
						{{ "cookie.message"|trans({
                            '%url%': path('frontend.cms.page', { id: shopware.config.core.basicInformation.privacyPage })
                        })|raw }}
					</div>
				{% endblock %}
				{% block layout_cookie_permission_inner_button %}
					<div class="col-12 d-flex  justify-content-end">
						{% block layout_cookie_permission_inner_button_configuration %}
							<span class="js-cookie-configuration-button">
								<button type="submit" class="btn btn-primary">
									{{ "cookie.configure"|trans|sw_sanitize }}
								</button>
							</span>
						{% endblock %}
						{% block layout_cookie_permission_inner_button_deny %}
							<span class="cookie-permission-button js-cookie-accept-button">
								<button type="submit" class="btn btn-secondary">
									{{ "cookie.accept"|trans|sw_sanitize }}
								</button>
								<input type="hidden" id="cookie_session-" checked="checked" disabled="disabled" data-cookie-required="true" data-cookie="session-">
								<input type="hidden" id="cookie_timezone" checked="checked" disabled="disabled" data-cookie-required="true" data-cookie="timezone">
								<input type="hidden" id="cookie_google-analytics-enabled" data-cookie="google-analytics-enabled" data-cookie-value="1" data-cookie-expiration="30">
							</span>
						{% endblock %}
					</div>
				{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
