{% block kerkow_product_bundles_detail %}
    <sw-page class="kerkow-bundles-detail">
        <template slot="smart-bar-actions">
            <sw-button :routerLink="{ name: 'kerkow.product.bundles.list' }">
                {{ $t('kerkow-product-bundles.detail.cancelButtonText') }}
            </sw-button>

            <sw-button-process
                :isLoading="isLoading"
                :processSuccess="processSuccess"
                variant="primary"
                @process-finish="saveFinish"
                @click="onClickSave">
                {{ $t('kerkow-product-bundles.detail.saveButtonText') }}
            </sw-button-process>
        </template>

        <template slot="content">
            <sw-card-view>
                <sw-card v-if="bundle" :isLoading="isLoading">
                    <sw-field :label="$t('kerkow-product-bundles.detail.nameLabel')" v-model="bundle.name"></sw-field>
                    <sw-field :label="$t('kerkow-product-bundles.detail.discountLabel')" v-model="bundle.discount" type="number"></sw-field>

                    <sw-field type="radio"
                              :label="$t('kerkow-product-bundles.detail.discountTypeLabel')"
                              v-model="bundle.discountType"
                              :options="options">
                    </sw-field>

                    <sw-entity-many-to-many-select
                        :localMode="bundle.isNew()"
                        :label="$t('kerkow-product-bundles.detail.assignProductsLabel')"
                        v-model="bundle.products">
                    </sw-entity-many-to-many-select>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}