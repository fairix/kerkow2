<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#kerkowZipModal">
  Launch demo modal
</button>
<!-- Modal -->
<div class="modal fade" 
  id="kerkowZipModal" 
  tabindex="-1" 
  role="dialog" 
  aria-labelledby="exampleModalCenterTitle" 
  data-zip-modal="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Unser Liefergebiet</h5>
        <button type="button" class="close js-close-modal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body js-modal-body">
       <form action="{{ path('frontend.custom.addZip') }}"
        method="get"
        data-url="{{ path('frontend.custom.addZip') }}?zip="
        id="js-add-zip-form"
        class="add-zip"
        >
        <div class="form-row add-zip-container">
           <div class="input-group mb-3">
            <input type="text" name="zip" class="form-control" placeholder="Postleitzahl" aria-label="Postleitzahl" required>
           
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="submit">></button>
            </div>
            <div class="invalid-feedback">
              {{ 'kerkow.zipShop.enterValidZip' | trans }}
            </div>
          </div>
            <input type="hidden" name="redirectTo" value="frontend.home.page"/>

        </div>
    </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary js-close-modal" data-dismiss="modal">Jetzt nicht</button>
      </div>
    </div>
  </div>
</div>